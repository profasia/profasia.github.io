html, body, form, fieldset, img
  padding:0
  margin:0
  border:0

body
  font-family: font-sans
  font-weight: font-sans-weight
  font-size: font-size
  line-height: 1.5em
  font-weight: 300
  background: #eee

#header
  position:relative
  line-height: 40px
  &::after
    content: ''
    display: table
    clear: both
  .brand
    width:192px
    display:inline-block
    text-align:center
    img
      vertical-align:middle
  .nav
    position:relative
    display:inline-block
  .nav > a
    position:relative
    display:inline-block
    color: #444
    padding: 0 16px
    margin: 0 8px
    text-align: center
    text-decoration: none
    &:hover
      color:#222
    &.sticky
      padding:0
      margin-left:-12px
  .nav > a.active
    color: darken(a-color, 25%)
    text-shadow: 0 0 1px primary-upper, 0 0 4px #fff

@media screen and (max-width:480px)
  #header
    .brand, .auth, .nav
      width:auto
      float:none
      position:static
      display:block
      text-align:center
      > a.active::after
        display:none

#content
  background: rgba(0,0,0,.1)
  box-shadow: 0 64px 64px -64px rgba(0,0,0,.15) inset,
    0 -64px 32px -64px rgba(0,0,0,.15) inset
  border: 1px solid #aaa
  border-width: 1px 0

#sidenav
  float: left
  width: 192px
  padding: 16px 0
  line-height: 40px
  a
    display:block
    position:relative
    color: #222
    text-decoration: none
    padding: 0 16px
    white-space: nowrap
    &:hover, &.active
      color: #000
    &.active
      background:#fff
      box-shadow: 0 1px 1px #aaa
      &::after, &::before
        content:''
        display:block
        position:absolute
        top:0
        right:-20px
        width:0
        height:0
        border: 20px solid transparent
        border-width: 20px 10px
        border-left-color: #fff
      &::before
        top:2px
        border-left-color: #aaa
  .badge
    background: danger-upper
    line-height:16px
    margin: 0 6px
    padding: 2px 6px
    border-radius:12px
    display:inline-block
    color: #fff
    text-shadow: 0 1px 1px #000

#main
  margin-left: 192px
  padding: 16px
  min-height:320px

#aside
  display:none

@media screen and (max-width:768px)
  #sidenav
    float:none
    text-align:center
    width: auto
    padding-bottom: 0
    a
      display:inline-block
      &.active::after, &.active::before
        display:none
  #main
    padding: 4px
    margin-left:0

@media screen and (min-width:1601px)
  #main
    margin-right: 256px

  #aside
    display: block
    position:fixed
    top:0
    bottom:0
    right:0
    padding-left: 16px
    background: rgba(255,255,255,.9)
    box-shadow: 0 0 3px rgba(0,0,0,.75)
    z-index: 100
    width: 240px
    font-size: 14px
    line-height: 20px

#footer
  font-size:14px
  padding: 0 16px
  color: #555
  a
    color: #222
    text-decoration:none
.select2-container
  width: 100% !important

  &.select2-dropdown-open .select2-choice::after
    border-top-color: transparent
    border-bottom-color: rgba(0,0,0,.5)
    top:0%

  .select2-choice
    position:relative
    display:block
    text-decoration:none !important
    text-align:left
    outline: none
    color: #000
    &::after
      content:''
      display:inline-block
      border:6px solid transparent
      border-top-color: rgba(0,0,0,.5)
      position:absolute
      right:8px
      top:45%

  &.shade .select2-choice
    color:#fff

.select2-search
  border-radius:4px 4px 0 0
  border-bottom:1px solid #eee
  &::before
    content: "\f002"
    font-family: 'FontAwesome'
    color: #777
    padding-left:8px
  .select2-input
    border:0
    font:14px font-sans
    width:80%
    outline:0

.select2-results
  position:relative
  max-height: 200px
  overflow-x: hidden
  overflow-y: auto
  padding:4px !important

  li
    line-height: 28px

  .select2-result-with-children > .select2-result-label
    font-weight: bold

  .select2-result-sub .select2-result-label
    padding-left:16px
    cursor:pointer

.select2-results .select2-highlighted
  background: primary-lower
  color: #fff
  text-shadow: none

.select2-offscreen
  position:absolute
  left:-100000px

.select2-drop
  position:absolute
  top:100%
  box-shadow: 0 1px 5px rgba(0,0,0,.6)
  background: rgba(255,255,255,.85)
  z-index:1100
  margin:4px
  border-radius: 4px
  ul, li
    display:block
    margin:0
    padding:0
    list-style: none outside !important

.select2-display-none
  display: none

.select2-drop-mask
  position: absolute
  left: 0
  top: 0
  right: 0
  bottom: 0
  z-index: 1099